<Page
    x:Class="RockPaperScissors.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RockPaperScissors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">


    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="Small">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="500" MinWindowWidth="1"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="showPlayerMove.(FrameworkElement.HorizontalAlignment)" Value="Center"/>
                        <Setter Target="showPlayerMove.(FrameworkElement.VerticalAlignment)" Value="Center"/>
                        <Setter Target="border.(FrameworkElement.Width)" Value="69"/>
                        <Setter Target="button.(FrameworkElement.HorizontalAlignment)" Value="Center"/>
                        <Setter Target="button.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>30,30,30,30</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="playerMove_RadioButtons.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>0,0,0,20</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="showComputerThought.(FrameworkElement.HorizontalAlignment)" Value="Center"/>
                        <Setter Target="showComputerThought.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>0,23,0,0</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="showComputerMove.(FrameworkElement.HorizontalAlignment)" Value="Center"/>
                        <Setter Target="border1.(FrameworkElement.Width)" Value="91"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="Base">
                    <VisualState.Setters>
                        <Setter Target="stackPanel.(StackPanel.Orientation)" Value="Horizontal"/>
                        <Setter Target="showPlayerMove.(TextBlock.FontSize)" Value="70"/>
                        <Setter Target="border.(FrameworkElement.Width)" Value="84"/>
                        <Setter Target="showPlayerMove.(FrameworkElement.HorizontalAlignment)" Value="Center"/>
                        <Setter Target="showPlayerMove.(FrameworkElement.VerticalAlignment)" Value="Center"/>
                        <Setter Target="border.(FrameworkElement.Height)" Value="101"/>
                        <Setter Target="showComputerMove.(TextBlock.FontSize)" Value="70"/>
                        <Setter Target="border1.(FrameworkElement.Width)" Value="101"/>
                        <Setter Target="border1.(FrameworkElement.Height)" Value="103"/>
                        <Setter Target="showComputerThought.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>20,0,0,0</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="playerMove_RadioButtons.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>10,0,0,0</Thickness>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="500" MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />

        </Grid.RowDefinitions>

        <StackPanel x:ConnectionId='5' x:Name="stackPanel" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="0.4,0,0,0" >
            <muxc:RadioButtons x:ConnectionId='7' x:Name="playerMove_RadioButtons" SelectedIndex="2"                                       Margin="10,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton x:ConnectionId='15' x:Name="radioButton" Content="Rock" Margin="0,0,0,0"/>
                <RadioButton x:ConnectionId='16' x:Name="radioButton1" Content="Paper" Margin="0,0,0,0" HorizontalAlignment="Center"/>
                <RadioButton x:ConnectionId='17' x:Name="radioButton2" Content="Scissors" Margin="0,0,0,0" HorizontalAlignment="Center"/>
            </muxc:RadioButtons>

            <Border x:ConnectionId='8' x:Name="border" BorderThickness="2" BorderBrush="Black" Margin="0,0,0,0" Width="52">
                <TextBlock x:ConnectionId='14' x:Name="showPlayerMove" Text="✌️" FontSize="48"/>
            </Border>
            <Button x:ConnectionId='9' x:Name="button" Margin="30,0,30,0"                     >Play</Button>
            <Border x:ConnectionId='10' x:Name="border1" BorderThickness="2" BorderBrush="Black" Width="67">
                <TextBlock x:ConnectionId='13' x:Name="showComputerMove" Text="🤔" FontSize="48" VerticalAlignment="Center"></TextBlock>
            </Border>
            <TextBlock x:ConnectionId='11' x:Name="showComputerThought" Text="I'm thinking..." FontSize="18px" VerticalAlignment="Center" Margin="0,23.1,0,0"></TextBlock>

            <TextBlock x:ConnectionId='12' x:Name="streak" Text="0" FontSize="18px" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20"></TextBlock>
        </StackPanel>

        <ContentDialog x:ConnectionId='6' x:Name="ContentDialog1"                                                  />
    </Grid>
    
    
</Page>

